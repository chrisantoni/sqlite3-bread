<% include template/header %>
<% include template/menu %>

<div class="container">
	<div class="row">
  <div class="table-responsive" style="background-color:white; padding: 10px;">
    <form action="/edit/<%= data.id %>" method="post">
     <table id="mytable" class="table table-bordred table-striped">
       <tr>
         <td style="text-align: left;">ID</td>
         <td><input  class="form-control" name="id" readonly="true" value="<%= data.id %>" /></td>
       </tr>

      <tr>
        <td style="text-align: left;">Nama</td>
        <td><input  class="form-control" name="string" value="<%= data.nama %>" /></td>
      </tr>

      <tr>
        <td style="text-align: left;">Umur</td>
        <td><input  class="form-control" name="integer" value="<%= data.umur %>" /></td>
      </tr>

      <tr>
        <td style="text-align: left;">Tinggi</td>
        <td><input  class="form-control" name="float" value="<%= data.tinggi %>" /></td>
      </tr>

      <tr>
        <td style="text-align: left;">Tanggal Lahir</td>
        <td><input  class="form-control" name="date" value="<%= data.tanggal_lahir %>" type="date" /></td>
      </tr>

      <tr>
        <td style="text-align: left;">Status</td>
        <td>
          <select  class="form-control" name="boolean">
            <option value="True"<%= (data.status == "True") ? " selected":"" %>>True</option>
            <option value="False"<%= (data.status == "False") ? " selected":"" %>>False</option>
          </select>
        </td>
      </tr>

      <tr>
        <td colspan="3" style="padding:30px 0px 0px 0px;"><input class="btn btn-default pull-left" type="submit" value="SIMPAN"></input></td>
      </tr>
    </table>
  </form>
</div>
</div>
</div>
<% include template/footer %>
