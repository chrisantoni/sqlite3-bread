<% include template/header %>
<% include template/menu %>


<!-- Form Pencarian -->
<div class="container">
	<div class="row">
  <div class="table-responsive" style="background-color:white; padding: 10px;">
    <form action="/search" method="post">
     <table id="mytable" class="table table-bordred table-striped">
       <tr>
         <td style="text-align: left;"><input name="idChecked" value="true" type="checkbox" onchange="document.getElementById('id').disabled=!this.checked;" > ID</td>
         <td><input  class="form-control" id="id" name="id" disabled  /></td>
       </tr>

      <tr>
        <td style="text-align: left;"><input name="namaChecked" value="true" type="checkbox" onchange="document.getElementById('string').disabled=!this.checked;"> Nama</td>
        <td><input  class="form-control" name="string" id="string" disabled /></td>
      </tr>

      <tr>
        <td style="text-align: left;"> <input name="umurChecked" type="checkbox" onchange="document.getElementById('integer').disabled=!this.checked;"> Umur</td>
        <td><input  class="form-control" name="integer" disabled id="integer" /></td>
      </tr>

      <tr>
        <td style="text-align: left;"><input name="tinggiChecked" type="checkbox" onchange="document.getElementById('float').disabled=!this.checked;"> Tinggi</td>
        <td><input  class="form-control" name="float" disabled id="float" /></td>
      </tr>

      <tr>
        <td style="text-align: left;"><input name="dateChecked" type="checkbox" onchange="document.getElementById('end_date').disabled=!this.checked; document.getElementById('start_date').disabled=!this.checked;"> Tanggal Lahir</td>
        <td><input  class="form-control date" name="start_date" type="date" id="start_date" disabled />
				to
        <input  class="form-control date" name="end_date" id="end_date" type="date"  disabled /></td>
      </tr>

      <tr>
        <td style="text-align: left;"> <input name="statusChecked" type="checkbox" onchange="document.getElementById('boolean').disabled=!this.checked;"> Status</td>
        <td>
          <select class="form-control" name="boolean" disabled id="boolean">
            <option value="True">True</option>
            <option value="False">False</option>
          </select>
        </td>
      </tr>

      <tr>
        <td colspan="3" style="padding:30px 0px 0px 0px;"><input class="btn btn-default pull-left" type="submit" value="CARI"> <input class="btn btn-default pull-left" type="reset" value="RESET"></input></td>
      </tr>
    </table>
  </form>
	</div>
</div>
</div>

<!-- pembatas -->
<section>
	<hr>
</section>


<!-- Hasil Pencarian -->
<div class="container">
	<div class="row">
  <div class="table-responsive" style="background-color:white; padding: 10px;">
     <table id="mytable" class="table table-bordred table-striped">
       <thead>
         <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Umur</th>
            <th>Tinggi</th>
            <th>Tanggal Lahir</th>
            <th>Status</th>
            <th colspan="2"  >ACTION</th>
          </tr>
      </thead>

      <tbody>
        <% if(data.length == 0){ %>
					 <td colspan="8">Data  kosong</td>
				<%}
          for (let i=0; i<data.length; i++)
            {%>
              <tr>
                <td>  <%= data[i].id    %></td>
                <td>  <%= data[i].nama    %></td>
                <td>  <%= data[i].umur    %></td>
                <td>  <%= data[i].tinggi  %></td>
                <td>  <%= data[i].tanggal_lahir     %></td>
                <td>  <%= data[i].status %></td>
                <td>  <a class="btn btn-success" href="/edit/<%= data[i].id %>">Edit</a></td>
                <td>
                  <a  class="btn btn-danger" href="/delete/<%= data[i].id %>" class='delete'
                  onclick="return confirm('Yakin menghapusn data?')">Delete</a>
                </td>
              </tr>
      <% } %>
      </tbody>
    </table>
</div>
</div>
</div>

<!-- pagination -->
<div class="container">
	<div class="row">
		<div class="col 12">
			<ul class="pagination pull-right" style="padding-bottom:25px;">
				<li><a href="#"><%= data[1].id %></a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
			</ul>
		</div>
	</div>
</div>


</body>
</html>


<% include template/footer %>
